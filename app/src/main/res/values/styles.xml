<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- colorAccent -->
        <item name="colorAccent">@color/color_blue</item>

        <!-- status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- action bar -->
        <item name="windowActionBar">false</item> <!-- no action bar -->
        <item name="windowNoTitle">true</item> <!-- no action bar -->
        <item name="actionOverflowMenuStyle">@style/ActionOverflowMenuStyle</item> <!-- action bar popup menu -->
        <item name="elevation">0dp</item>

        <!-- text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_default</item>

        <!-- window -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- snackbar -->
        <item name="snackbarStyle">@style/SnackbarTheme</item>
        <item name="snackbarButtonStyle">@style/SnackbarTextButtonTheme</item>
        <item name="snackbarTextViewStyle">@style/SnackbarTextViewTheme</item>
    </style>

    <style name="SnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/color_dark_gray</item>
        <item name="cornerRadius">2dp</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="actionTextColorAlpha">1.0</item>
    </style>

    <style name="SnackbarTextButtonTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="elevation">0dp</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="AppTheme.Dark">
        <!-- status bar -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- window -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.ToolbarTitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="AppTheme.ToolbarTitleTextAppearanceDark">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.ToolbarThemeDark">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
